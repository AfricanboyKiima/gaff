<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="liste_agent">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.internal_layout">
                        <div >
                            <div class="page">
                                <center>
                                    <div>
                                        <h3>LISTE DES AGENT PAR SERVICE</h3>
                                    </div>
                                </center>
                                
                                <div class="row">
                                    <table class="table table-striped" style="width:95%; margin-left:20px;">
                                        <thead>
                                        <tr>
                                            <th style="text-align:center;width:10%;border: 1px solid black;">
                                              CODE
                                            </th>
                                            <th style="text-align:center;width:10%;border: 1px solid black;">
                                              <t t-esc="o.code"/>
                                            </th>
                                            <th style="text-align:center;width:60%;border: 1px solid black;">
                                              LIBELLE
                                            </th>
                                            <th style="text-align:center;width:10%;border: 1px solid black;">
                                              <t t-esc="o.libelle"/>
                                            </th>
                                        </tr>
                                       </thead>
                                       <tbody>
                                       <t t-set="n" t-value="0" />
                                        <tr t-foreach="o.agents" t-as="a">
                                        <t t-set="n" t-value="n+1" />
                                            <td style="text-align:center;width:10%;border: 1px solid black;">
                                                <t t-esc="n"/>
                                            </td>
                                            <td style="text-align:left;width:60%;border: 1px solid black;">
                                                <t t-esc="e.name"/>
                                            </td>
                                            <td style="text-align:center;width:30%;border: 1px solid black;">
                                                
                                            </td>
                                        </tr>
                                       </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report id="report_liste_agent_service" model="gaff.servce" string="Liste des agent par service" print_report_name="(object._get_report_fiche_filename())" menu="True" name="esforca.liste_etudiant" file="esforca.liste_etudiant" report_type="qweb-pdf" />
    </data>
</odoo>  